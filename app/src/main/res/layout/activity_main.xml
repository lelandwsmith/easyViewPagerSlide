<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_doing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="进行中"
            android:textColor="@color/selected_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/default_color"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="已关闭"
            android:textColor="@color/default_color"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_cursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_banner"
        android:scaleType="matrix"
        android:src="@drawable/img_bg_heng_1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_cursor"
        android:flipInterval="30"
        android:persistentDrawingCache="animation">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
